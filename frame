    private void ajouterBActionPerformed(java.awt.event.ActionEvent evt) {                                         
            
            String libelle ,auteur,date;
            
             libelle=libelleT.getText();
            auteur=auteurT.getText();
            date =dateT.getText();
            
          String [] ligne= new String[]{auteur,libelle,date};
            d.addRow(ligne);
            
            
    }                                        

